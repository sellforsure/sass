		</div>

	</div>

	<div class="footer">
		<footer class="footer__content">
			{{#each footer}}
			<div class="footer__links">
				<h6 class="footer__title">{{title}}</h6>
				{{#each links}}
				<a href="{{url}}" class="footer__link">{{text}}</a>
